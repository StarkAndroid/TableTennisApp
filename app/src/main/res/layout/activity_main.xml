<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.serwis.tabletennisapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/imageforbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="player A"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreA"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/scorecircle"
                android:gravity="center"
                android:text="score"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pointA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="point" />

            <Button
                android:id="@+id/netA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="net" />

            <TextView
                android:id="@+id/serveA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/serviceball"
                android:gravity="center"
                android:text="S" />

            <TextView
                android:id="@+id/matchscoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="player b"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreB"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/scorecircle"
                android:gravity="center"
                android:text="score"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pointB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="point" />

            <Button
                android:id="@+id/netB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="net" />

            <TextView
                android:id="@+id/serveB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/serviceball"
                android:gravity="center"
                android:text="S" />

            <TextView
                android:id="@+id/matchscoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="@color/Score"
                android:textSize="50sp" />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:id="@+id/reset"
        android:text="reset"
        />
</RelativeLayout>